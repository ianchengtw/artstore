<div class="row">
  <div class="col-md-12">
    <h2>Order Details</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Product Details</th>
          <th>Price</th>
          <th>Qty</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= link_to(order_item.product_name, product_path(order_item)) %></td>
            <td><%= order_item.price %></td>
            <td><%= order_item.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        Total: <%= @order.total %> NTD
      </span>
    </div>

    <hr>

    <h2>Order Info</h2>

    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>Order</td>
        </tr>
        <tr>
          <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
        </tr>
        <tr>
          <td>Reciever</td>
        </tr>
        <tr>
          <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
        </tr>
      </tbody>
    </table>

    <% if !@order.is_paid? %>
      <div class="pull-right">
        <%= link_to("Pay by Credit Card", pay_with_credit_card_order_path(@order.token), class: 'btn btn-lg btn-danger') %>
        <%= link_to("Pay by ATM", pay_with_atm_order_path(@order.token), class: 'btn btn-lg btn-danger') %>
      </div>
    <% else %>
      <p class="text-center">This order has been paid.</p>
    <% end %>
  </div>
</div>
