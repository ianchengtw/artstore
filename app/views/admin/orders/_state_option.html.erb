<div style="padding: 10px; float: right">

  <% case order.aasm_state %>
    <% when 'order_placed' %>
      <%= link_to("取消訂單",
                  cancel_admin_order_path(order), method: :post,
                  class: 'btn btn-sm btn-default') %>

    <% when 'paid' %>
      <%= link_to("取消訂單",
                  cancel_admin_order_path(order), method: :post,
                  class: 'btn btn-sm btn-default') %>
      <%= link_to("出貨",
                  ship_admin_order_path(order), method: :post,
                  class: 'btn btn-sm btn-default') %>

    <% when 'shipping' %>
      <%= link_to("設為已出貨",
                  shipped_admin_order_path(order), method: :post,
                  class: 'btn btn-sm btn-default') %>

    <% when 'shipped' %>
      <%= link_to("退貨",
                  return_admin_order_path(order), method: :post,
                  class: 'btn btn-sm btn-default') %>

    <% when 'cancel_order' %>
      <span class="label label-default">訂單已取消</span>

    <% when 'return_good' %>
      <span class="label label-default">已退貨</span>

  <% end %>

</div>
